    <section class="page-section cta">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <div class="cta-inner text-center rounded">
                        <h2 class="section-heading mb-5">
                            <span class="section-heading-upper">Time for a cut?</span>
                            <span class="section-heading-lower">Come on in!</span>
                        </h2>
                        <ul class="list-unstyled list-hours mb-5 text-left mx-auto">
                            <li class="list-unstyled-item list-hours-item d-flex">
                                Sunday
                                <span class="ml-auto">Off</span>
                            </li>
                            <li class="list-unstyled-item list-hours-item d-flex">
                                Monday
                                <span class="ml-auto">8:00 AM to 7:00 PM</span>
                            </li>
                            <li class="list-unstyled-item list-hours-item d-flex">
                                Tuesday
                                <span class="ml-auto">8:00 AM to 7:00 PM</span>
                            </li>
                            <li class="list-unstyled-item list-hours-item d-flex">
                                Wednesday
                                <span class="ml-auto">8:00 AM to 7:00 PM</span>
                            </li>
                            <li class="list-unstyled-item list-hours-item d-flex">
                                Thursday
                                <span class="ml-auto">Off</span>
                            </li>
                            <li class="list-unstyled-item list-hours-item d-flex">
                                Friday
                                <span class="ml-auto">8:00 AM to 6:00 PM</span>
                            </li>
                            <li class="list-unstyled-item list-hours-item d-flex">
                                Saturday
                                <span class="ml-auto">8:00 AM to 3:00 PM</span>
                            </li>
                        </ul>
                        <p class="address mb-5">
                            <em>
                                <strong>5403 Village Drive</strong>
                                <br>
                                Concord, North Carolina
                            </em>
                        </p>
                        <p class="mb-0">
                            <small>
                                <em>Call Anytime!</em>
                            </small>
                            <br>
                            (704) 786-0475
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer class="footer text-faded text-center py-5">
        <div class="container">
            <p class="m-0 small">Copyright &copy; Sarah Greene 2018</p>
            <script type="text/javascript" src="https://booksy.com/widget/code.js?id=75437&country=us&lang=en"></script>
